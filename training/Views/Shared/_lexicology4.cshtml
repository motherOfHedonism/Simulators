</div>
<script>
    $(document).ready(function () {




        var firstWidth;
        var cnvs = document.getElementById("canvas00");
        var ctxt = cnvs.getContext("2d");
        ctxt.strokeStyle = "darkgrey";
        ctxt.lineWidth = 3;
        ctxt.arc(55, 130, 75, 1.25 * Math.PI, 1.75 * Math.PI, false);
        ctxt.stroke();

        var cnvs = document.getElementById("canvas200");
        var ctxt = cnvs.getContext("2d");
        ctxt.strokeStyle = "darkgrey";
        ctxt.lineWidth = 3;
        ctxt.arc(55, 130, 75, 1.25 * Math.PI, 1.75 * Math.PI, false);
        ctxt.stroke();

        var cnvs = document.getElementById("canvas400");
        var ctxt = cnvs.getContext("2d");
        ctxt.strokeStyle = "darkgrey";
        ctxt.lineWidth = 3;
        ctxt.arc(55, 130, 75, 1.25 * Math.PI, 1.75 * Math.PI, false);
        ctxt.stroke();

        firstWidth = document.getElementById("answer2L1").offsetWidth;
        var cnvs20 = document.getElementById("canvas300");
        var ctxt20 = cnvs20.getContext("2d");
        ctxt20.strokeStyle = "darkgrey";
        ctxt20.lineWidth = 3;
        ctxt20.arc(195 + firstWidth / 10, -261, 340, 0.35 * Math.PI, 0.65 * Math.PI, false);
        ctxt20.stroke();

        secondWidth = document.getElementById("answer3L1").offsetWidth;
        var cnvs1 = document.getElementById("canvas500");
        var ctxt1 = cnvs1.getContext("2d");
        ctxt1.strokeStyle = "darkgrey";
        ctxt1.lineWidth = 3;
        ctxt1.arc(195 + firstWidth / 10, -261, 340, 0.35 * Math.PI, 0.65 * Math.PI, false);
        ctxt1.stroke();
      
        firstWidth = document.getElementById("answer2L1").offsetWidth;
        secondWidth = document.getElementById("answer3L1").offsetWidth;
        thirdWidth = document.getElementById("answer4L1").offsetWidth;
        var cnvs = document.getElementById("canvas600");
        var ctx = cnvs.getContext("2d");
        ctx.strokeStyle = "darkgrey";
        ctx.lineWidth = 3;
        ctx.beginPath();
        ctx.moveTo(50, 10);
        ctx.quadraticCurveTo((255 + secondWidth / 10 + firstWidth), 600, (200 + secondWidth / 10 + thirdWidth / 10 + firstWidth) + (200 + secondWidth / 10 + firstWidth) * 1.4, 10);
        ctx.stroke();
        ctx.closePath();
    });
</script>