@model IEnumerable<DatabaseFirst.TeachU>
@{
    ViewBag.Title = "Teacher";
}

<div class="row">
    <div class="col-md-10">
        @Html.ActionLink("<< Назад", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
    </div>
</div>
<div class="panel panel-primary">
    <div class="panel-heading">Ваши ученики</div>
    <table class="table table-striped">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Нет ни одного ученика</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {

                <tr>
                    <td>@item.Email</td>
                    <td>
                        @Html.ActionLink("Просмотреть", "Student", new { id = item.Id },
                        new { @class = "btn btn-primary btn-xs", style = "float: left; margin-right: 10px" })
                    </td>
                </tr>
            }
        }
    </table>
</div>
